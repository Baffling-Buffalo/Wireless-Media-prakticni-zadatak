@model IEnumerable<ProductView>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p class="mt-3">
    <a role="button" class="btn btn-primary" asp-action="Create">Create New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
            <th>
                Category
            </th>
            <th>
                Manufacturer
            </th>
            <th>
                Supplier
            </th>
            <th style="width:140px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price.ToString("0.00")$
            </td>
            <td>
                @item.Category
            </td>
            <td>
                @item.Manufacturer
            </td>
            <td>
                @item.Supplier
            </td>
            <td>
                <a role="button" class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                <a role="button" class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
